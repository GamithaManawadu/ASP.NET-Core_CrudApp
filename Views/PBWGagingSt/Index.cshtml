@model IEnumerable<PBWGagingSt>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">PBW-Gaging Station</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> &nbsp; Add New 
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Cell Type Name
                    </th>

                    <th>
                        Sand Blasting
                    </th>

                    <th>
                        Gage Applying
                    </th>
                    
                <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                    <td width="50%">@obj.CellTypeName</td>

                     <td width="50%">@obj.SandBlasting</td>

                     <td width="50%">@obj.GageApplying</td>

                    
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                        <a asp-controller="PBWGagingSt" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                           <i class="fas fa-edit"></i> 
                            </a>
                        <a asp-controller="PBWGagingSt" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                           <i class="fas fa-trash-alt"></i> 
                            </a>
                            </div>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Cell type exist</p>
    }
</div>
